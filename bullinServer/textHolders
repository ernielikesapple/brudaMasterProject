
CXX = g++
CXXFLAGS = -g #-Wall #-Werror   #usage??

all: bbserv

## Common:
tcp-utils.o: tcp-utils.h tcp-utils.cc
    $(CXX) $(CXXFLAGS) -c -o tcp-utils.o tcp-utils.cc

ConfigFileHandler.o: ConfigFileHandler.hpp ConfigFileHandler.cpp
    $(CXX) $(CXXFLAGS) -c -o ConfigFileHandler.o ConfigFileHandler.cpp


## Server:
main.o: main.cpp tcp-utils.h ConfigFileHandler.hpp #add all the dependency
    $(CXX) $(CXXFLAGS) -c -o main.o main.cpp

bbserv: main.o tcp-utils.o
    $(CXX) $(CXXFLAGS) -o bbserv main.o tcp-utils.o ConfigFileHandler.o

clean:
    rm -f iserv ciserv cserv *~ *.o *.bak core \#*






# set non-optional compiler flags here
CXXFLAGS += -std=c++11 -Wall -Wextra -pedantic-errors

# set non-optional preprocessor flags here
# eg. project specific include directories
CPPFLAGS +=

# find cpp files in subdirectories
SOURCES := $(shell find . -name '*.cpp')

# find headers
HEADERS := $(shell find . -name '*.h')

OUTPUT := ttt

# Everything depends on the output
all: $(OUTPUT)

# The output depends on sources and headers
$(OUTPUT): $(SOURCES) $(HEADERS)
    $(CXX) $(CXXFLAGS) $(CPPFLAGS) -o $(OUTPUT) $(SOURCES)

clean:
    $(RM) $(OUTPUT)        \#*





g++ ConfigFileHandler.cpp TcpUtils.cpp tcp-utils.cc main.cpp -o bbserv

